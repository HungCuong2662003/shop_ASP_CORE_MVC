@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand List";
}
<h2>Thông tin thương hiệu sản phẩm</h2>
<a class="btn btn-success btn-sm" asp-action="Add" asp-controller="Brand">Thêm thương hiệu</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>

                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>

                        <a href="d:\winform\shop_asp_core_mvc\shop_asp_core_mvc\areas\admin\views\brand\index.cshtml">d:\winform\shop_asp_core_mvc\shop_asp_core_mvc\areas\admin\views\brand\index.cshtml</a>
                    }
                </td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>


                </td>
            </tr>
        }
    </tbody>

</table>