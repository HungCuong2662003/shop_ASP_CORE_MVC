@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product List";
}
<h2>Thông tin sản phẩm</h2>
<a class="btn btn-success btn-sm" asp-action="Add" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>
                    <img src="/images/product-details/@item.Image" width="120" alt="Product Image">
                </td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand?.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>


                </td>
            </tr>
        }
    </tbody>

</table>