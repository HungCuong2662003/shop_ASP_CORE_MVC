@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category List";
}
<h2>Thông tin danh mục sản phẩm</h2>
<a class="btn btn-success btn-sm" asp-action="Add" asp-controller="Category">Thêm danh mục</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Category Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
           
                <td>@item.Slug</td>
                <td>
                    @if (item.status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>


                </td>
            </tr>
        }
    </tbody>

</table>