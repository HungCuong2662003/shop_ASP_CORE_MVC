@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order List";
}
<h2>Thông tin đặt hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Order Code</th>
            <th scope="col">User Name</th>
            <th scope="col">Order Date</th>
            <th scope="col">Order Status</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>

                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã xử lý</span>
                    }
                </td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>


                </td>
            </tr>
        }
    </tbody>

</table>